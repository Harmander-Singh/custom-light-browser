<Window x:Class="CustomLightBrowser.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomLightBrowser"
        mc:Ignorable="d"
        Title="LightBrowser" 
        Height="400" 
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#0078D4" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">

                <!-- LightBrowser Icon -->
                <Image Source="lightbrowser_icon.png" 
                       Width="120" Height="120" 
                       Margin="0,0,0,30"/>

                <!-- App Name -->
                <TextBlock Text="Light Browser" 
                           FontSize="32" 
                           FontWeight="Light" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Tagline -->
                <TextBlock Text="Fast • Secure • Lightweight" 
                           FontSize="14" 
                           Foreground="#CCCCCC" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Animation -->
            <StackPanel Grid.Row="1" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,10">
                <ProgressBar Name="LoadingProgressBar"
                             Width="200" 
                             Height="4" 
                             IsIndeterminate="True"
                             Background="#333333"
                             Foreground="#0078D4"
                             BorderThickness="0"/>
            </StackPanel>

            <!-- Status Text -->
            <TextBlock Grid.Row="2" 
                       Name="StatusTextBlock"
                       Text="Initializing..." 
                       FontSize="12" 
                       Foreground="#AAAAAA" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>

            <!-- Version Info -->
            <TextBlock Grid.Row="3" 
                       Text="Version 1.0.0" 
                       FontSize="10" 
                       Foreground="#666666" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,15"/>
        </Grid>
    </Border>

</Window>
